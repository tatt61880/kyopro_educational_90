func main()
	var n: int :: cui@inputInt()
	var k: int :: cui@inputInt()
	var c: []int :: #[2 * n]int
	for i(0, n - 1)
		var a: int :: cui@inputInt()
		var b: int :: cui@inputInt()
		do c[2 * i] :: b
		do c[2 * i + 1] :: a - b
	end for
	do c.sort()
	
	var ans: int :: 0
	for i(1, k)
		do ans :+ c[2 * n - i]
	end for
	
	do cui@print("\{ans}\n")
end func
